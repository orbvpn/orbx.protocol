# OrbX Server Configuration

server:
  host: "0.0.0.0"
  port: "8443"
  cert_file: "/etc/orbx/certs/server.crt"
  key_file: "/etc/orbx/certs/server.key"
  read_timeout: 30s
  write_timeout: 30s
  idle_timeout: 120s

jwt:
  secret: "${JWT_SECRET}" # Set via environment variable

orbnet:
  endpoint: "https://api.orbvpn.com/graphql"
  api_key: "${ORBNET_API_KEY}" # Set via environment variable

crypto:
  quantum_safe: true

# WireGuard Configuration
wireguard:
  enabled: true
  interface_name: "wg0"
  listen_port: 51820
  private_key: "YOUR_WIREGUARD_PRIVATE_KEY_HERE" # Generate with: wg genkey
  ip_pool: "10.8.0.0/24" # IP range for VPN clients
  dns:
    - "1.1.1.1"
    - "1.0.0.1"
  mtu: 1420
  persistent_keepalive: 25
  public_interface: "eth0" # Your server's public network interface